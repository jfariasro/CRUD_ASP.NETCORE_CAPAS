@page
@model CapaPresentacion.Pages.Empleado.InsertarModel
@{
}

<br />
<h2>Insertar Empleado</h2>

@if (Model.errorMensaje.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <p>
            <strong>@Html.Raw(@Model.errorMensaje)</strong>
        </p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Razón Social</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="razonsocial" value="@Model.CN_Empleado.razonsocial" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Fecha de Nacimiento</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="fechanacimiento" value="@Model.CN_Empleado.fechanacimiento" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Edad</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="edad" value="@Model.CN_Empleado.edad" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Salario</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="salario" value="@Model.CN_Empleado.salario" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Insertar</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Empleado" role="button">Cancel</a>
        </div>
    </div>
</form>

